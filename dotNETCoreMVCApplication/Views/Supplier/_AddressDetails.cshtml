@model dotNETCoreMVCApplication.Models.Supplier

@{
    ViewData["Title"] = "Address Details";
}

<div class="modal-header">
    <h5 class="modal-title">@ViewData["Title"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-action="AddressDetails">

    <div class="modal-body">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Address.SupplierId" />

        <partial name= "_Address/Edit" />

        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>

    </div>

</form>
